doctype html
html(ng-app="maki")
  head
    title Maki

    meta(name="viewport", content="width=device-width, initial-scale=1")

    link(rel="stylesheet", href="#{assets.url('/css/semantic.css')}")
    link(rel="stylesheet", href="#{assets.url('/css/font-awesome.css')}")
    link(rel="stylesheet", href="#{assets.url('/css/highlight/maki.css')}")
    link(rel="stylesheet", href="#{assets.url('/css/maki.css')}")
    link(rel="stylesheet", href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700')

    script(src="/js/jquery.js")
    script(src="/js/semantic.js")
    script(src="/js/underscore-min.js")
    //-script(src="/js/angular.js")
    //-script(src="/js/angular-route.js")
    //-script(src="/js/angular-resource.js")
    script(src="/js/templates.js")
    script(src="/js/highlight.pack.js")
    script(src="/js/headroom.min.js")
    script(src="/js/uuid.js")
    script(src="/js/ui.js")
    
    script(src="/js/maki.js")

    base(href="/")

  body(ng-controller="mainController")
    block navbar
      include ../partials/navbar
    
    .contained
      .ui.grid
        include ../partials/flash

      .ui.grid
        .column.content(ng-view)
          block content

    footer
      .contained
        .ui.grid
          .column
            .ui.one.column.stackable.center.aligned
              small Powered by <a href="http://github.com/unchaz/maki">Maki</a>. Built by <a href="http://github.com/unChaz">Chaz Ferguson</a>.
